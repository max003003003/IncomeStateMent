<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.max.incomestatement.MainActivity"

   >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatImageView
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_account_circle_white_24dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:textColor="@color/font"
            android:text="My Account" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iconwallet"
            android:layout_marginLeft="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_account_balance_wallet_white_24dp"/>
        <TextView
            android:id="@+id/namewallet"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:text="Wallet"
            android:textColor="@color/font"

            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/balancewallet"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="3"
            android:gravity="right"
            android:textAlignment="gravity"
            android:textSize="14sp"
            android:textColor="@color/font"
            android:text="775.00฿"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/ic_chevron_right_white_24dp"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iconpiggybank"
        android:layout_marginLeft="8dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/local_atm_white_48x48"/>
    <TextView
        android:id="@+id/namepiggybank"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:text="Piggy Bank"
        android:textColor="@color/font"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        />
    <TextView
        android:id="@+id/balancepiggybank"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="3"
        android:gravity="right"
        android:textAlignment="gravity"
        android:textSize="14sp"
        android:textColor="@color/font"
        android:text="1000.75฿"/>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        android:src="@drawable/ic_chevron_right_white_24dp"/>
</LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">
<android.support.v7.widget.AppCompatImageView
    android:id="@+id/iconbank"
    android:layout_marginLeft="8dp"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginBottom="8dp"
    android:src="@drawable/ic_account_balance_white_24dp"/>
        <TextView
        android:id="@+id/namebank"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:text="Bank"
        android:textColor="@color/font"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
            />
        <TextView
        android:id="@+id/balancebank"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="3"
        android:gravity="right"
        android:textAlignment="gravity"
        android:textSize="14sp"
        android:textColor="@color/font"
        android:text="8000.00฿"/>
        <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        android:src="@drawable/ic_chevron_right_white_24dp"/>
    </LinearLayout>





<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:onClick="settings">

        <ImageView
            android:id="@+id/settingimage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_settings_white_24dp"
            android:layout_marginLeft="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/font"
            android:textSize="16sp"
            android:layout_marginLeft="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@id/settingimage"
            android:paddingLeft="16dp"
            android:paddingBottom="6dp"

            />


    </RelativeLayout>


</LinearLayout>